Month = FORMAT(CalendarTable[Date], "MMMM")
MonthYear = FORMAT(CalendarTable[Date], "MMM YYYY")
Weekday = FORMAT(CalendarTable[Date], "dddd")
Year = YEAR(CalendarTable[Date])


